@model Employee
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input  class="form-control" asp-for="FullName">
            <span class="text text-danger" asp-validation-for="FullName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input  class="form-control" asp-for="Description">
            <span class="text text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <select asp-for="PositionId" class="form-select" aria-label="Disabled select example">
                <option selected>Choosee position</option>
                @foreach (var item in ViewBag.Positions)
                {
                    <option value="@item.Id">@item.Name</option>

                }
            </select>
            <span class="text text-danger" asp-validation-for="PositionId"></span>
        </div>
        <div class="form-group">
            <label asp-for="FormFile"></label>
            <input accept="image/*" type="file" class="form-control" asp-for="FormFile">
            <span class="text text-danger" asp-validation-for="FormFile"></span>
        </div>
        @Html.AntiForgeryToken()
        <button type="submit">Create</button>
    </form>
</div>