</section>

<section id="flowerexperts">
    <div class="container">
        <div class="info col-lg-12">
            <div class="title">
                <h1>Flower Experts</h1>
            </div>
            <div class="desc">
                <p>
                    Flower Experts
                    A perfect blend of creativity, energy, communication, happiness and love. Let us arrange a
                    smile for you.
                </p>
            </div>
        </div>
        <div class="row">
            <div class="experts">
                @foreach (Employee item in Model.Employees.Take(4))
                {
                    <div class="expert col-md-6 col-12 col-lg-3">
                        <div style="width:100px" class="photo">
                            <img style="width:100%" src="~/assets/images/@item.Image"
                                 alt="">
                        </div>
                        <div class="name">
                            <p>@item.FullName</p>
                        </div>
                        <div class="job">
                            <p>@item.Position?.Name</p>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>

<section id="subscribe">

    <div class="parallax-window" data-parallax="scroll"
         data-image-src="  https://fiorello.qodeinteractive.com/wp-content/uploads/2018/05/h3-background-img.jpg">

        <div class="container">
            <div class="title col-lg-12 col-12 col-md-12">
                <h1>Join The Colorful Bunch!</h1>
            </div>
            <div class="subs col-lg-12 col-12 col-md-12">
                <input type="email">
                <button>SUBSCRIBE</button>
            </div>

        </div>
    </div>



</section>

<section id="blogs">
    <div class="container">
        <div class="info col-lg-12">
            <div class="title">
                <h1>Form our blog</h1>
            </div>
            <div class="desc">
                <p>
                    Flower Experts
                    A perfect blend of creativity, energy, communication, happiness and love. Let us arrange a
                    smile for you.
                </p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Blogs)
            {
                <div class="blog col-lg-4">
                    <div class="image">
                        <img src="~/assets/images/@item.Image"
                             alt="@item.Title">
                        <span class="badge bg-light text-dark">@item.CreatedDate.ToString("dd:MM:yyyy")</span>
                    </div>
                    <div class="title">
                        <h4>@item.Title</h4>
                    </div>
                    <div class="desc">
                        <p>@item.Description</p>
                    </div>
                </div>
            }

        </div>
    </div>


</section>

<section id="slideimages">
    <div class="container">
        <div class="owl-carousel owl-theme">
            @foreach (Employee item in Model.Employees)
            {
                <div class="item">
                    <div class="expert col-md-6 col-12 col-lg-7">
                        <div class="photo">
                            <img src="~/assets/images/@item.Image"
                                 alt="">
                        </div>
                        <div class="title">
                            <h3>
                                @item.Description
                            </h3>
                        </div>
                        <div class="name">
                            <p>@item.FullName</p>
                        </div>
                        <div class="job">
                            <p>@item.Position?.Name</p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>const alertMessage = document.getElementById("alert-message");
    if (alertMessage != undefined) {
        const message = alertMessage.innerHTML;
        if (message != "") {
            Swal.fire({
                title: `${message}`,
                width: 600,
                padding: '3em',
                color: '#716add',
                background: '#fff url(/images/trees.png)',
                backdrop: `
    rgba(0,0,123,0.4)
    url("/images/nyan-cat.gif")
    left top
    no-repeat
  `
            })
        }
    }</script>